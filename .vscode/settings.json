  "java.project.sourcePaths": [
    "src/main/java",
    "target/generated-sources/protobuf/java"
  ],
  "java.configuration.runtimes": [
    {
      "name": "JavaSE-21",
      "path": "C:\\Program Files\\Java\\jdk-21"
    }
