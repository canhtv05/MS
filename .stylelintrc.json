{
  "extends": ["stylelint-config-standard", "stylelint-scss"],
  "rules": {
    "color-hex-length": "short",
    "selector-max-id": 0,
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "variants",
          "responsive",
          "screen",
          "layer",
          "utilities",
          "components",
          "base"
        ]
      }
    ]
  }
}
